{
  "name": "ai-job-platform",
  "version": "1.0.0",
  "description": "AI-powered job application platform with automated job search and applications",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "nodemon backend/server.js",
    "build": "npm run build-frontend && npm run build-backend",
    "build-frontend": "cd frontend && npm run build",
    "build-backend": "cd backend && npm run build",
    "test": "npm run test-frontend && npm run test-backend",
    "test-frontend": "cd frontend && npm test",
    "test-backend": "cd backend && npm test",
    "deploy": "npm run build && npm start"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.4.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.1",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.8.1",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5",
    "nodemailer": "^6.9.3",
    "twilio": "^4.11.0",
    "axios": "^1.4.0",
    "cheerio": "^1.0.0-rc.12",
    "puppeteer": "^19.8.0",
    "pdf-parse": "^1.1.1",
    "sharp": "^0.32.1",
    "qrcode": "^1.5.3",
    "node-cron": "^3.0.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.1",
    "supertest": "^6.3.3",
    "eslint": "^8.45.0",
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "ai",
    "job-search",
    "automation",
    "career",
    "south-africa",
    "machine-learning"
  ],
  "author": "AI Career Accelerator Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/ai-job-platform.git"
  }
}
